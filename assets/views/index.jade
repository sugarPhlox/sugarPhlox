  .row.you-should-talk-to-me#contact
    .container-fluid
      .col-xs-12.col-sm-6.col-sm-offset-6
        .well
          h1 Contact Me
          p
            | Feel free to contact me about job opportunities, questions about my work, or even to say hi. 
            | I'll be here (if I'm not in the car or on the motorcycle. don't check emails and drive folks).
          form.form-horizontal(role='form', method='post', target='_blank', action='//formspree.io/sugarPhlox@gmail.com')
            .form-group
              label.col-sm-2.control-label(for='name') Name
              .col-sm-10
                input#name.form-control(required='', type='text', name='name', placeholder='First & Last Name')
            .form-group
              label.col-sm-2.control-label(for='email') Email
              .col-sm-10
                input#email.form-control(required='', type='email', name='_replyto', placeholder='your email, please')
            .form-group
              label.col-sm-2.control-label(for='message') Message
              .col-sm-10
                textarea.form-control(required='', rows='4', name='message')
            .form-group
              .col-sm-10.col-sm-offset-2
                input#submit.btn.btn-primary(name='submit', type='submit', value='send')
                input(type='text', name='_gotcha', style='display:none')
                input(type='hidden', name='_next', value='//site.io/thanks.html')
